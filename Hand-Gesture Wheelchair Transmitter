#include <SPI.h>       
#include "RF24.h"      
#include "Wire.h"      
#include "Arduino_BMI270_BMM150.h"


float ax, ay, az;
float gx, gy, gz;
float data[2];

RF24 radio(9, 8);
                                    
const uint64_t pipe = 0xE8E8F0F0E1LL;

void setup(void){
  while (!Serial);
  Serial.println("Started");

  if (!IMU.begin()) {
    Serial.println("Failed to initialize IMU!");
    while (1);
  }


  Serial.begin(9600);
  Wire.begin();
  radio.begin();                     
  radio.openWritingPipe(pipe);   
}
void loop(void) {
  float accX, accY, accZ; 

  if (IMU.accelerationAvailable()) {
    IMU.readAcceleration(accX, accY, accZ);

    // Serial.print("X: ");
    // Serial.print(accX);
    // Serial.print("  Y: ");
    // Serial.print(accY);
    // Serial.print("  Z: ");
    // Serial.println(accZ);

    Serial.print("X:");
    Serial.print(data[0]);
    Serial.print("  Y: ");
    Serial.println(data[1]);
  }

  data[0] = accX;
  data[1] = accY;
  radio.write(data, sizeof(data));
}
